<div class="tela">
    <% books.forEach((book) => {  %>
        <% if(book.quantidade || book.quantidade == null || book.quantidade > 0) { %>
            <div class="post-limit">
        <% } else { %>
            <div class="post-limit indisponible">
        <% } %>
        
            <div class="post-title">
                <a href="/book/<%= book._id %>"><h3><%= book.titulo %></h3></a>
            </div>

            <div class="post-autor">
                <p>Por <%= book.autor %></p>
            </div>

            <div class="post-resume">
                <p><%= book.resumo %></p>
            </div>

            <% if(book.quantidade || book.quantidade == null || book.quantidade > 0) { %>
                <div class="post-buttons">
                    <!-- COMPRAR -->
                    <div class="button-buy">
                        <button aria-label="buy" class="btn book-container-buy inline" action="boleto.pdf" onclick="location.href = '/comprar/<%= book.titulo %>/<%= book._id %>';">Comprar</button>
                    </div>
                    <!-- FIM DO COMPRAR -->
                    
                    <!-- ADICIONAR -->
                    <div class="button-add">
                        <button aria-label="wish cart" class="btn book-container-add outline" onclick="location.href = '/carrinho/<%= book._id %>';">
                            <svg width="25" height="25" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M43.9167 14.5833C43.5568 13.9596 43.0413 13.4399 42.4206 13.0747C41.7999 12.7096 41.0951 12.5116 40.3751 12.5H13.7084L12.5001 7.79167C12.378 7.33716 12.1056 6.93738 11.7273 6.65744C11.349 6.3775 10.8871 6.23389 10.4167 6.25H6.25008C5.69755 6.25 5.16764 6.46949 4.77694 6.8602C4.38624 7.2509 4.16675 7.7808 4.16675 8.33333C4.16675 8.88587 4.38624 9.41577 4.77694 9.80647C5.16764 10.1972 5.69755 10.4167 6.25008 10.4167H8.83341L14.5834 31.7917C14.7055 32.2462 14.9779 32.646 15.3562 32.9259C15.7345 33.2058 16.1964 33.3494 16.6667 33.3333H35.4167C35.8015 33.3322 36.1784 33.2245 36.5056 33.0222C36.8329 32.82 37.0978 32.5311 37.2709 32.1875L44.1042 18.5208C44.4004 17.9 44.5383 17.2156 44.5056 16.5285C44.4729 15.8415 44.2706 15.1732 43.9167 14.5833ZM34.1251 29.1667H18.2501L14.8542 16.6667H40.3751L34.1251 29.1667Z" fill="#ffffff"/>
                                <path d="M15.625 43.75C17.3509 43.75 18.75 42.3509 18.75 40.625C18.75 38.8991 17.3509 37.5 15.625 37.5C13.8991 37.5 12.5 38.8991 12.5 40.625C12.5 42.3509 13.8991 43.75 15.625 43.75Z" fill="#ffffff"/>
                                <path d="M36.4583 43.75C38.1841 43.75 39.5833 42.3509 39.5833 40.625C39.5833 38.8991 38.1841 37.5 36.4583 37.5C34.7324 37.5 33.3333 38.8991 33.3333 40.625C33.3333 42.3509 34.7324 43.75 36.4583 43.75Z" fill="#ffffff"/>
                            </svg>
                        </button>
                    </div>
                    <!-- FIM DO ADICIONAR -->
                </div>
            <% } %>

            <div class="post-image">
                <img src="<%= book.capa %>" alt="">
            </div>
        </div>
    <% }); %>
</div>
