<%- include("includes/head")%>

<main>    
    <div id="green"><img src="/assets/images/green.png"></div>
    
    <div id="formularios">
    <!--ESTE É PARA O CADASTRO-->
    <div class="card">
        <h2>Registrar</h2>
        <form action="/Register" method="post">
            <!--CAMPO PARA USUARIO-->
            <div class="textfield">
                <label >Nome</label>
                <input type="text" name="nome">
            </div>
            <!--CAMPO PARA EMAIL-->
            <div class="textfield">
                <label>E-mail</label>
                <input type="email" name="email">
            </div>
            <!--CAMPO PARA SENHA-->
            <div class="textfield">
                <label>Senha</label>
                <input type="password" name="senha">
            </div>
            <!--CAMPO PARA REPETIR SENHA-->
            <div class="textfield">
                <label>Repetir Senha</label>
                <input type="password" name="repetirSenha">
            </div>

            <div class="accept">
                <h3>
                    Ao clicar em Cadastre-se, você concorda com nossos Termos, Política de Privacidade e Política de Cookies. 
                    Você poderá receber notificações por SMS e cancelar isso quando quiser.
                </h3>
            </div>

            <!--BOTAO PARA FAZER O CADASTRO-->
            <button class="btn">Registrar</button>
        </form>
    </div>

    <!--ESTE É PARA O LOGIN-->
    <div class="card">
        <h2>login</h2>
        <form action="/Login:id" method="post" class="centralizacao-flex">
            <!--CAMPO PARA EMAIL-->
            <div class="textfield">
                <label>E-mail</label>
                <input type="email" name="email">
            </div>
            <!--CAMPO PARA SENHA-->
            <div class="textfield">
                <label>Senha</label>
                <input type="password" name="senha">
            </div>
            <!--BOTAO PARA FAZER O LOGIN-->
            <button class="btn">Retornar</button>
    </div>
</div>
</main>

<%- include("includes/footer")%>