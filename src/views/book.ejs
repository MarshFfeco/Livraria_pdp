<%- include("includes/head")%>
<!-- FUNDO VERDE -->
<div class="limit-home">
    <div class="quadrado"></div>
</div>
<!-- FIM DO FUNDO VERDE -->

<!-- MESSAGES -->
<%- include("includes/message")%>
<!-- FIM MESSAGES -->

<main id="book-style">
    <!-- IMAGEM LIVRO -->
    <figure class="book-figure">
        <img src="<%= book.capa %>" width="250px" alt="Imagem da capa do livor">
    </figure>
    <!-- FIM DA IMAGEM DO LIVRO -->

    <!-- SEÇÃO DO LIVRO -->
    <section class="book-design-container book-container">
        <!-- TITULO -->
        <h1 class="book-container-title"><%= book.titulo %></h1>
        <!-- FIM DO TITULO -->
         
        <!-- AUTOR + AVALIAÇÃO -->
        <div class="book-container-betwen flex-center">
            <!-- AUTOR -->
            <p class="book-container-author">por <%= book.autor %></p>
            <!-- FIM DO AUTOR -->

            <!-- BOOK OR EBOOK -->
            <div class="book-container-avaliable flex-center">
                <% if(book.quantidade) { %>
                    <p>Livro</p>
                <% } else { %>
                    <p>Ebook</p>
                <% } %>
            </div>
            <!-- FIM DAO BOOK OR EBOOK -->
        </div>
        <!-- FIM DO AUTOR + AVALIAÇÃO -->

        <hr class="book-container-hr">

        <!-- PRECO -->
        <h3 class="book-container-price">R$<%= book.preco %></h3>
        <!-- FIM DO PRECO -->

        <!-- COMPRAR -->
        <button aria-label="buy" class="btn book-container-buy inline" action="boleto.pdf" onclick="location.href = '/comprar/<%= book.titulo %>/<%= book._id %>';">Comprar</button>
        <!-- FIM DO COMPRAR -->
        
        <!-- ADICIONAR -->
        <button aria-label="wish cart" class="btn book-container-add outline" onclick="location.href = '/carrinho/<%= book._id %>';">Adicionar à lista</button>
        <!-- FIM DO ADICIONAR -->
    </section>
    <!-- FIM DA SEÇÃO DO LIVRO -->

    <!-- DESCRIÇÃO DO LIVRO -->
    <article class="book-design-container book-description flex-center">
        <!-- TITULO -->
        <h2 class="book-description-product">Descrição do produto</h2>
        <!-- FIM DO TITULO -->

        <!-- RESUMO -->
        <div>
            <h4 class="book-description-title">Resumo</h4>

            <p class="book-description-description">
                <%= book.resumo %>
            </p>
        </div>
        <!-- FIM DO RESUMO -->

        <!-- DETALHES -->
        <div>
            <h4 class="book-description-title">Detalhes do produto</h4>

            <pre class="book-description-description">
<%= book.detalheProduto %>
            </pre>
        </div>
        <!-- FIM DOS DETALHES -->

    </article>
    <!-- FIM DA DESCRIÇÃO DO LIVRO -->
</main>

<%- include("includes/footer")%>